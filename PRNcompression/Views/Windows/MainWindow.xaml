<Window x:Class="PRNcompression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRNcompression"
        xmlns:vm="clr-namespace:PRNcompression.ViewModels" 
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="PRNcompression" Height="450" Width="650">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding ProgramStatus}"/>
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Исходные данные">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center" Foreground="Blue"
                                   FontWeight="Bold" FontSize="18"
                                   Text="Генерация исходных данных"/>
                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="35"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Padding="5" Grid.Column="0" Text="Размер данных:"
                                       Foreground="Blue"/>
                            <TextBox Padding="5" Grid.Column="1" Foreground="Blue"
                                     Text="{Binding ByteNumberStr}"/>
                            <TextBlock Padding="5" Foreground="Blue"
                                       Grid.Column="2" Text="Байт" 
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        <Button Margin="0,5,0,0" Style="{StaticResource CustomButton}"
                                Height="25" Content="Сгенерировать"
                                Command="{Binding GenerateDataCommand}"/>
                        <TextBlock Margin="0,10,0,0"
                                   HorizontalAlignment="Center" Text="ИЛИ"
                                   Foreground="Blue"
                                   FontWeight="Bold" FontSize="18"/>
                        <Button Margin="0,10,0,0" Height="25" Style="{StaticResource CustomButton}"
                                Content="Выбор файла с данными"/>
                        <Grid>
                            <StackPanel>
                                <GroupBox Grid.Column="1" Height="200" Header="Директории">
                                    <GroupBox.Resources>
                                        <HierarchicalDataTemplate DataType="{x:Type vm:DiskViewModel}"
                                              ItemsSource="{Binding DirectoryItems}">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:ImageAwesome Height="12" Icon="HddOutline" Foreground="LightBlue" Margin="0,0,3,0"/>
                                                <TextBlock Text="{Binding Name}" />
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                        <HierarchicalDataTemplate DataType="{x:Type vm:DirectoryViewModel}"
                                              ItemsSource="{Binding DirectoryItems}">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:ImageAwesome Height="12" Icon="Folder" Foreground="Gold" Margin="0,0,3,0"/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                        <DataTemplate DataType="{x:Type vm:FileViewModel}">
                                            <StackPanel Orientation="Horizontal">
                                                <fa:ImageAwesome Height="12" Icon="File" Foreground="LightGray"/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GroupBox.Resources>
                                    <TreeView ItemsSource="{Binding Disks}"/>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                        <!--<GroupBox Grid.Column="1" Height="200" Header="Директории">
                            <GroupBox.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type vm:DirectoryViewModel}"
                                      ItemsSource="{Binding DirectoryItems}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Height="12" Icon="Folder" Foreground="Gold" Margin="0,0,3,0"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                                <DataTemplate DataType="{x:Type vm:FileViewModel}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:ImageAwesome Height="12" Icon="File" Foreground="LightGray"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GroupBox.Resources>
                            <TreeView ItemsSource="{Binding DiskRootDir.DirectoryItems}"/>
                        </GroupBox>-->
                    </StackPanel>
                    
                </Grid>
            </TabItem>
            <TabItem Header="Процесс сжатия">

            </TabItem>
            <TabItem Header="Процесс распаковки">

            </TabItem>
            <TabItem Header="Оценка производительности">

            </TabItem>
            <TabItem Header="Визуализация">
                <DataGrid ItemsSource="{Binding InitialBytes}" RowHeight="20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Value" Binding="{Binding}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
